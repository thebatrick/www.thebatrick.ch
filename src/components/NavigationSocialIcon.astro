---
import { Icon } from 'astro-icon'

export interface Props {
    icon: string;
    url: string;
    title: string;
    target?: string;
    css?: string;
}

const {icon, url, title, target = "_blank", css } = Astro.props;
---

<a href={url} target={target} class="relative group">
    <Icon 
      name={icon} 
      title={title}
      width="28" 
      hight="28" 
      class={`relative ${css} top-0 group-hover:-top-1 transition-[top] ease duration-300`}
    />
</a>