---
import Icon from "astro-iconify";
import NavigationLink from "./NavigationLink.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.split("/");
---

<!-- title="Anzeige Namen" url="name der seite unter /src/pages/ ohne .astro" -->
<NavigationLink title="Home" url="" currentpath={currentPath[1]} />
<NavigationLink title="About" url="about" currentpath={currentPath[1]} />
<NavigationLink title="Uses" url="uses" currentpath={currentPath[1]} />
<NavigationLink title="Blog" url="blog" currentpath={currentPath[1]} />
<!-- überprüfen ob oben /blog steht und ob man noch eine / pfad weiter ist -->
{
    currentPath[1] === "blog" && currentPath[2] ? (
       <a href="#toc" class="block md:hidden">
        <Icon name="mdi:toc" width="32" height="32" class="ml-2" />
       </a>
    ) : (
       ""
    )
}