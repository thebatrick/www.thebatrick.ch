---
import { Icon } from 'astro-iconify'

export interface Props {
    url: string; 
    title: string;
    external?: boolean;
}

const { url, title, external } = Astro.props;
---

<p class="m-0 ">
<a 
   href={url} 
   target={external ? "_blank" : undefined}
   rel={external ? "noopener noreferrer" : undefined} 
   class="inline-flex items-center rounded-lg border-2 border-solid bg-dark
   text-light py-2 px-6 font-semibold hover:border-dark hover:bg-transparent
   hover:text-dark dark:bg-light dark:text-dark dark:hover:border-light
   dark:hover:bg-dark dark:hover:text-light"
   >
    <span>{title}</span>
    {
        external ? (
          <Icon name="ph:arrow-square-out" width="24" height="24" class="ml-2" />
        ) : ("")
    }
</a>
</p>